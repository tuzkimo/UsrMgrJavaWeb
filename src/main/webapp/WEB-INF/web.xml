<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  
  <display-name>User Manager</display-name>

  <servlet>
    <servlet-name>listUsersServlet</servlet-name>
    <servlet-class>net.tuzkimo.javaweb.servlet.ListUsersServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>addUserServlet</servlet-name>
    <servlet-class>net.tuzkimo.javaweb.servlet.AddUserServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>editUserServlet</servlet-name>
    <servlet-class>net.tuzkimo.javaweb.servlet.EditUserServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>deleteUserServlet</servlet-name>
    <servlet-class>net.tuzkimo.javaweb.servlet.DeleteUserServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>deleteUsersServlet</servlet-name>
    <servlet-class>net.tuzkimo.javaweb.servlet.DeleteUsersServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>upPhotoServlet</servlet-name>
    <servlet-class>net.tuzkimo.javaweb.servlet.UpPhotoServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>checkNameServlet</servlet-name>
    <servlet-class>net.tuzkimo.javaweb.servlet.CheckNameServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>listUsersServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>addUserServlet</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>editUserServlet</servlet-name>
    <url-pattern>/edit</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>deleteUserServlet</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>deleteUsersServlet</servlet-name>
    <url-pattern>/deletes</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>upPhotoServlet</servlet-name>
    <url-pattern>/upPhoto</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>checkNameServlet</servlet-name>
    <url-pattern>/checkName</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index</welcome-file>
  </welcome-file-list>

</web-app>
